  "nyc": {
    "functions": 80,
    "lines": 80,
    "check-coverage": true,
    "reporter" : ["text", "html"]
  },
  "eslintIgnore": ["*.spec.js"],
  "keywords": [],
  "author": "Amanda Santana <amandasantanati@gmail.com> (http://amandasantanati.com.br/)",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/register": "^7.9.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "husky": "^4.2.5",
    "mocha": "^7.1.2",
    "nyc": "^15.0.1"
  }
}
